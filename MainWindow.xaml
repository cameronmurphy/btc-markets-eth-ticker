<Window x:Class="Camurphy.BtcMarketsEthTicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BTC Markets ETH Ticker"
        Height="40"
        Width="120"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="MouseLeftButtonDownHandler">
    <Grid Background="Black" Cursor="SizeAll">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Viewbox>
            <TextBlock x:Name="PriceTextBlock" Foreground="LightSkyBlue" TextAlignment="Center" VerticalAlignment="Center">...</TextBlock>
        </Viewbox>
    </Grid>
</Window>
